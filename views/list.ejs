<%- include("header") -%>

  <div class="box" id="heading">
    <h1>Today</h1>
  </div>

  <div class="box">
    <% newListItems.forEach(function(item){ %>
      <form action="/delete" method="post">
        <div class="item">
          <input type="checkbox" name="checkbox" value="<%= item._id %>" onchange="this.form.submit()">
          <p><%=  item.name  %></p>
        </div>
        <input type="hidden" name="listName" value="<%= id %>"></input>
      </form>
      <% }) %>


      <form class="item" action="/list" method="post">
        <input type="text" name="newItem" placeholder="New Item" autocomplete="off">
        <button type="submit" name="list" value="<%= id %>">+</button>
      </form>
  </div>
  <div class="logoutLblPos">
    <a id=logout class="btn btn-dark btn-lg" href="/logout" role="button">Logout</a>
  </div>

 </form>

<%- include("footer") -%>
